<h1>Albums#New</h1>

<%= form_for :album, url: albums_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :artist %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
