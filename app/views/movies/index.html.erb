<h1>All Movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Director</th>
    <th>Description</th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.name %></td>
      <td><%= movie.director %></td>
      <td><%= movie.description %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New movie', new_movies_path %>
